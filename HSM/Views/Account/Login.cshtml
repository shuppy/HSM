@model HSM.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Accounts.cshtml";
}

<div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">

    <div class="logo">
        <img src="~/Content/images/logo.png" alt="Daystar Logo">
    </div>
    <!-- start: LOGIN BOX -->
    <div class="box-login" style="display: block;">
        <h3 class="text-center text-center-xs" >Sign in to your account</h3>
        <p class="text-center text-center-xs">
            Please enter your name and password to log in.
        </p>
        
            <section id="loginForm" class="form-login">
              
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <hr />
                        @Html.ValidationSummary(true)
                        <div class="col-md-3"></div> @*Emptyleft*@
    <div class="col-md-7" style="margin:2px 2px 2px 2px; padding:0px 15px 0px 15px;">
        <div class="form-group">
            @*@Html.LabelFor(m => m.UserName, new { @class = "col-md-4 control-label" })*@
            <span class="input-icon input-icon-right">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control uname", placeholder = "Username" })
                <i class="fa fa-user"></i>
                @Html.ValidationMessageFor(m => m.UserName)
            </span>

        </div>
        <div class="form-group">
            <span class="input-icon  input-icon-right">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control pword", placeholder = "password" })
                <i class="fa fa-keyboard-o"></i>
                @Html.ValidationMessageFor(m => m.Password)
            </span>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        @*<div class="col-xs-8 col-sm-8 col-md-9"> </div>*@
        <div class="pull-right  col-xs-4 col-sm-4 col-md-3">
            <input type="submit" value="Log in" class="btn btn-xs btn-dark-green" />
        </div>
    </div>
                        @*<p>
                @Html.ActionLink("Register", "Register") if you don't have a local account.
            </p>*@
                    }
                
                
            </section>
        <div class="pull-left">&copy; @DateTime.Now.Year - HSoG&reg; v3 - All rights Reserved. </div>
        @*<div class="col-md-4">
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>*@
    </div>

    <!-- start: FORGOT BOX -->
    <div class="box-forgot">
        <h3>Forget Password?</h3>
        <p>
            Enter your e-mail address below to reset your password.
        </p>
        <form class="form-forgot" novalidate="novalidate">
            <div class="errorHandler alert alert-danger no-display">
                <i class="fa fa-remove-sign"></i> You have some form errors. Please check below.
            </div>
            <fieldset>
                <div class="form-group">
                    <span class="input-icon">
                        <input type="email" class="form-control" name="email" placeholder="Email">
                        <i class="fa fa-envelope"></i>
                    </span>
                </div>
                <div class="form-actions">
                    <a class="btn btn-light-grey go-back">
                        <i class="fa fa-chevron-circle-left"></i> Log-In
                    </a>
                    <button type="submit" class="btn btn-green pull-right">
                        Submit <i class="fa fa-arrow-circle-right"></i>
                    </button>
                </div>
            </fieldset>
        </form>
        <!-- start: COPYRIGHT -->
        <div class="copyright">
            <div class="pull-left">&copy; @DateTime.Now.Year - HSoG&reg; v3 - All rights Reserved. </div>
        </div>
        <!-- end: COPYRIGHT -->
    </div>
    <!-- end: FORGOT BOX -->
    </div>
